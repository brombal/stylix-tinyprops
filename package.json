    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "husky": "^9.1.7",
    "rollup": "^4.29.1",
    "rollup-plugin-dts": "^6.1.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@stylix/core": "github:brombal/stylix#v5",
    "csstype": "^3.1.3"
