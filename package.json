{
  "name": "@stylix/tinyprops",
  "version": "1.2.0",
  "description": "TinyProps - a set of style prop shortcuts for Stylix",
  "keywords": [
    "stylix",
    "plugin",
    "css",
    "react",
    "styles",
    "css-in-js",
    "shortcuts"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./exports.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "tsc --watch",
    "clean": "rm -rf dist",
    "prettier": "prettier --write .",
    "eslint": "eslint --ext=.ts,.tsx,.js,.jsx ./src",
    "eslint:fix": "eslint --fix --ext=.ts,.tsx,.js,.jsx ./src",
    "prepare": "husky install"
  },
  "author": "Alex Brombal",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "@stylix/core": "^4.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "files": [
    "dist/*",
    "exports.mjs"
  ],
  "dependencies": {
    "csstype": "^3.1.1"
  }
}
